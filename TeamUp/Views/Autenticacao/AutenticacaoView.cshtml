@model TeamUp.ViewModels.AutenticacaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title{ Autenticação }

@section header {    
    <link href="~/res/css/Autenticacao.css" rel="stylesheet" />
}

@section content{
    
    <div id="formWrapper">
        <form method="post" class="mainForm" action="@Url.Action("Login")">

            <h1 class="titulo">Log in</h1>

            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

            @Html.LabelFor(m => m.Senha)
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })

            @Html.ValidationSummary()

            <input type="submit" class="btn btn-default" style="margin-top:20px" value="Log in" />

        </form>
    </div>

}
